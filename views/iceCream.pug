extends layout

block content
  h1= title
  - let iceCreams = results
  div(class="container-fluid")
    div(class="row")
        each item,index in iceCreams
            div.col-sm-2(onclick=`buy(${index})`) icecream_brand: #{item["icecream_brand"]} <br> icecream_flavour:  #{item["icecream_flavour"]} <br> calories:  #{item["calories"]}
  
  script. 
    function buy(index) {
        alert("You purchased item " + index)
    }